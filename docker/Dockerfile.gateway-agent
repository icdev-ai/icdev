# CUI // SP-CTI
# STIG-hardened Dockerfile for ICDEV Remote Command Gateway Agent
# Phase 28 â€” port 8458

FROM python:3.11-slim AS builder

WORKDIR /build
COPY requirements.txt .
RUN pip install --no-cache-dir --prefix=/install -r requirements.txt

FROM python:3.11-slim

# STIG: Remove unnecessary packages
RUN apt-get update && apt-get upgrade -y \
    && apt-get purge -y --auto-remove \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# STIG: Create non-root user
RUN groupadd -r icdev && useradd -r -g icdev -u 1000 -d /app -s /sbin/nologin icdev

# Copy installed packages
COPY --from=builder /install /usr/local

# Copy application code
WORKDIR /app
COPY tools/ tools/
COPY args/ args/
COPY context/ context/
COPY goals/ goals/

# STIG: Set ownership
RUN chown -R icdev:icdev /app

# STIG: Read-only root filesystem compatible
# Data directory for SQLite (mounted as volume in production)
RUN mkdir -p /app/data && chown icdev:icdev /app/data

# STIG: Drop all capabilities, run as non-root
USER icdev

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8458/health')" || exit 1

EXPOSE 8458

# Environment defaults
ENV PYTHONUNBUFFERED=1
ENV PORT=8458

ENTRYPOINT ["python", "tools/gateway/gateway_agent.py"]

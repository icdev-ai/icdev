# CUI // SP-CTI
FROM python:3.11-slim AS base
RUN groupadd -r icdev && useradd -r -g icdev -d /app -s /sbin/nologin icdev
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY tools/ tools/
COPY args/ args/
COPY context/ context/
COPY hardprompts/ hardprompts/
USER icdev
EXPOSE 8455
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD python -c "import socket; s=socket.socket(); s.connect(('localhost',8455)); s.close()"
CMD ["python", "tools/mcp/simulation_server.py"]
# CUI // SP-CTI
